{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "build"
  ]
}
